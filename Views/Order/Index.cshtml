@using System.Web;
@using BridgeWater.Data;
@using BridgeWater.Services;
@inject IOrderService orderService;

@{
    #pragma warning disable
    ViewData["Title"] = "Comenzile Mele";
    List<OrderViewModel> orders = new List<OrderViewModel>();

    string? uid = Context.User?.Claims.FirstOrDefault(u => u.Type == "id")?.Value;
    int? page = Context.Request.Query.Keys.Contains("page") ? Convert.ToInt32(Context.Request.Query["page"]) : null;

    int previousPage = 1, totalPages = 1;
    int nextPage = 1, mainPage = 1;
    int totalResults = 0;

    if (!string.IsNullOrEmpty(uid))
    {
        int userId = Convert.ToInt32(uid);
        var productOrderViewList = await orderService.GetProductOrdersAsync(userId, page);

        orders.AddRange(productOrderViewList.orderViewModels);
        totalResults = productOrderViewList.results;
        totalPages = productOrderViewList.pages;

        if(productOrderViewList.pages > 1)
        {
            previousPage = 1;
            mainPage = 1;
            nextPage = 2;
        }
    }
}

<section style="background-color: #f1e3e3;">
    <br /><br />
    <div class="row" style="padding-bottom: 6%;">
        <div class="col-2"></div>
        <div class="col-8">
            @if (orders.Count > 0)
            {
                <table class="table table-light table-hover" id="products" style="margin-left: 10%; width: 90%;">
                    <thead>
                        <tr>
                            <th style="background-color: #506983; color: white;">#</th>
                            <th style="background-color: #506983; color: white;">Nume Produs</th>
                            <th style="background-color: #506983; color: white;">Cantitate</th>
                            <th style="background-color: #506983; color: white;">Pretul</th>
                            <th style="background-color: #506983; color: white;">Actiuni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (OrderViewModel order in orders)
                        {
                            <tr>
                                <td id="productField">
                                    <a href="/Home/About/?id=@order.ProductId">
                                        <img src="/Home/Show/?id=@order.ProductId&logo=true" alt="@order.ProductName" width="64" height="64" />
                                    </a>
                                </td>
                                <td id="productField">
                                    <small>@order.ProductName</small>
                                </td>
                                <td id="productField"><small id="quantity" onclick="ModifyQuantity(this, @order.Stock, @order.Price)" title="Modificati Cantitatea" style="color: #6079b3; font-weight: bold;">&nbsp;@order.Stock</small></td>
                                <td id="productField">
                                    <small id="totalPrice" style="color: #66BB6A; font-weight: bold;">@((Math.Truncate((order.Price * order.Stock) * 100) / 100).ToString("#####.##"))&nbsp;Lei</small>
                                </td>
                                <td id="productField">
                                    <div class="row">
                                        <div class="col-3"></div>
                                        <div class="col-2">
                                            <form action="/Order/UpdateOrder" method="post">
                                                <input type="hidden" id="ProductOrderId" name="ProductOrderId" value="@order.ProductId"/>
                                                <input type="hidden" id="Stock" name="Stock" value="@order.Stock" />
                                                <button id="changeOrder" name="changeOrder" style="visibility: hidden;" class="btn btn-sm" type="submit" title="Modificati Comanda">
                                                    <i class="fas fa-sync" style="color: #784949;" aria-hidden="true"></i>
                                                </button>
                                            </form>
                                        </div>
                                        <div class="col-2">
                                            <a class="btn btn-sm" href="/Home/About/?id=@order.ProductId" title="Vizualizare">
                                                <i class="fa fa-eye" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                        <div class="col-2">
                                            @if (!string.IsNullOrEmpty(uid))
                                            {
                                                <button type="button" class="btn btn-sm" title="Elimina Comanda" data-bs-toggle="modal" data-bs-target="#removeOrderModal">
                                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                                </button>
                                                <div class="modal fade" id="removeOrderModal" tabindex="-1" aria-labelledby="orderModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="orderModalLabel">Elimina Comanda</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p>Sunteti sigur, ca vreti sa anulati aceasta comanda?</p>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-sm btn-success" data-bs-dismiss="modal">
                                                                    <i class="fa fa-times" aria-hidden="true"></i>&nbsp;Inchideti
                                                                </button>
                                                                <form action="/Order/Cancel" method="post">
                                                                    <input type="hidden" id="orderId" name="orderId" value="@order.Id" />
                                                                    <button class="btn btn-sm btn-danger" type="submit" title="Elimina Comanda">
                                                                        <i class="fa fa-trash" style="color: white;" aria-hidden="true"></i>&nbsp;Anulati
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-3"></div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="row" style="margin-left: 10%;">
                    <div class="col-4">
                        <span style="font-weight: bold; color: #997878;">Numarul de rezultate:&nbsp;&nbsp;<small style="font-weight: bold; color: #6970c5 !important;">@totalResults</small></span>
                    </div>
                    <div class="col-8">
                        @if(totalPages > 1)
                        {
                        <nav id="navigation" style="margin-left: 50% !important;">
                            <ul class="pagination">
                                @if (mainPage > 1)
                                {
                                    <li class="page-item"><a class="page-link" href="/Order/?page=@previousPage">&lt;&lt;</a></li>
                                    <li class="page-item"><a class="page-link" href="/Order/?page=@previousPage">@previousPage</a></li>
                                }
                                <li class="page-item active"><a class="page-link" style="color: #ffa571 !important;">@mainPage</a></li>

                                @if (nextPage <= totalPages && mainPage < totalPages)
                                {
                                    <li class="page-item"><a class="page-link" href="/Order/?page=@nextPage">@nextPage</a></li>
                                }

                                @if (nextPage <= totalPages && mainPage < totalPages)
                                {
                                    <li class="page-item"><a class="page-link" href="/Order/?page=@nextPage">&gt;&gt;</a></li>
                                }
                            </ul>
                        </nav>
                        <br/>
                        <br/>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    Nu aveti comenzi momentan, in cosul dvs. <br>Mergeti la <a href="/Home/" class="alert-link">produse</a> pentru a putea inregistra comenzi.
                </div>
            }
        </div>
        <div class="col-2"></div>
    </div>
</section>